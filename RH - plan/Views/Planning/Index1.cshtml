@model IEnumerable<EmploiDuTemps>
@using HR_Management_System.Models
@using HR_Management_System.ViewModels
@{
    ViewData["Title"] = "Emplois du temps générés";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-calendar-alt"></i> Emplois du temps générés</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-user"></i> Employé</th>
                        <th><i class="fas fa-calendar-day"></i> Date de génération</th>
                        <th><i class="fas fa-calendar-week"></i> Période</th>
                        <th><i class="fas fa-tools"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.Employee?.Utilisateur?.Nom ?? "Non défini") @(item.Employee?.Utilisateur?.Prenom ?? "Non défini")</td>
                            <td>@item.DateGeneration.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>Du @(item.ContraintesPlanning?.DateDebut.ToString("dd/MM/yyyy") ?? "Non défini") au @(item.ContraintesPlanning?.DateFin.ToString("dd/MM/yyyy") ?? "Non défini")</td>
                            <td>
                                <a asp-action="MonEmploi" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Afficher">
                                    <i class="fas fa-eye"></i> Afficher
                                </a>
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 
<link href="~/css/souf.css" rel="stylesheet" asp-append-version="true" />