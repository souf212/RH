@model List<Conges> 
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-xl-3 col-sm-6 mb-4"> 
            <div class="dashboard-card">
                <div class="card-icon bg-gradient-primary">
