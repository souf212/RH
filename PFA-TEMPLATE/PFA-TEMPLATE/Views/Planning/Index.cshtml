@model IEnumerable<EmploiDuTemps>
@using PFA_TEMPLATE.Models
@using PFA_TEMPLATE.ViewModels
@{
    ViewData["Title"] = "Emplois du temps générés";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-calendar-alt"></i> Emplois du temps générés</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-user"></i> Employé</th>
                        <th><i class="fas fa-calendar-day"></i> Date de génération</th>
                        <th><i class="fas fa-calendar-week"></i> Période</th>
                        <th><i class="fas fa-tools"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(item.Employee?.Utilisateur?.Nom ?? "Non défini") @(item.Employee?.Utilisateur?.Prenom ?? "Non défini")</td>
                            <td>@item.DateGeneration.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>Du @(item.ContraintesPlanning?.DateDebut.ToString("dd/MM/yyyy") ?? "Non défini") au @(item.ContraintesPlanning?.DateFin.ToString("dd/MM/yyyy") ?? "Non défini")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Afficher">
                                    <i class="fas fa-eye"></i> Afficher
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Modifier">
                                    <i class="fas fa-edit"></i> Modifier
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center mt-3">
    <a asp-action="Configuration" class="btn btn-lg btn-primary rounded-pill">
        <i class="fas fa-plus"></i> Créer un nouveau planning
    </a>
</div>

<link href="~/css/souf.css" rel="stylesheet" asp-append-version="true" />