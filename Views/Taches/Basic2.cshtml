@model IEnumerable<HR_Management_System.ViewModels.TachesVM>
@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="fas fa-tasks"></i> Employee - Tasks List</h5>
    </div>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-info text-center mt-2">
            <i class="fas fa-info-circle"></i> @ViewBag.Message
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-heading"></i> Task Title</th>
                        <th><i class="fas fa-file-alt"></i> Description</th>
                        <th><i class="fas fa-flag"></i> Status</th>
                        <th><i class="fas fa-cogs"></i> Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                @if (item.Status == "Active")
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-exclamation-circle"></i> @item.Status
                                    </span>
                                }
                                else if (item.Status == "Completed")
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle"></i> @item.Status
                                    </span>
                                }
                                else if (item.Status == "Pending")
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-clock"></i> @item.Status
                                    </span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditStatus" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-sync-alt"></i> Update Status
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<link href="~/css/souf.css" rel="stylesheet" asp-append-version="true" />
