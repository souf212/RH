@model IEnumerable<HR_Management_System.ViewModels.PlanningViewModel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Gestion des Plannings</h1>
<table class="table">
    <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
            <th>Employee</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var planning in Model)
        {
            <tr>
                <td>@planning.DateDebut.ToString("dd/MM/yyyy")</td>
                <td>@planning.DateFin.ToString("dd/MM/yyyy")</td>
                <td>@planning.Statut</td>
                <td>@planning.EmployeName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@planning.IdPlanning" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@planning.IdPlanning" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


<a asp-action="Create" class="btn btn-success">Créer un nouveau planning</a>
