@model IEnumerable<HR_Management_System.ViewModels.UserVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-users"></i> Liste des utilisateurs</h5>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th><i class="fas fa-user"></i> Nom</th>
                    <th><i class="fas fa-user"></i> Prénom</th>
                    <th><i class="fas fa-map-marker-alt"></i> Adresse</th>
                    <th><i class="fas fa-id-card"></i> CIN</th>
                    <th><i class="fas fa-phone"></i> Téléphone</th>
                    <th><i class="fas fa-user-circle"></i> Login</th>
                    <th><i class="fas fa-lock"></i> Password</th>
                    <th><i class="fas fa-user-tag"></i> Rôle</th>
                    <th><i class="fas fa-tools"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Nom</td>
                        <td>@user.Prenom</td>
                        <td>@user.Adresse</td>
                        <td>@user.CIN</td>
                        <td>@user.Telephone</td>
                        <td>@user.Login</td>
                        <td>********</td> <!-- Placeholder for password -->
                        <td>@user.Role</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="d-flex justify-content-center mt-3">
    <a asp-action="Create" class="btn btn-lg btn-primary rounded-pill">
        <i class="fas fa-plus"></i> Create new user
    </a>

</div>

<link href="~/css/souf.css" rel="stylesheet" asp-append-version="true" />